<Window x:Class="GI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GI"
        Title="MainWindow" Width="690" Height="510" Style="{DynamicResource GI.Window.Style}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0" Style="{StaticResource GI.Window.Head.Style}"  MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0" Width="60" Height="60" Margin="12" Style="{DynamicResource GI.Window.Head.Logo.Style}"></Rectangle>
            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Style="{DynamicResource GI.Window.Head.Title.Style}"/>
                <TextBlock Grid.Row="1" Style="{DynamicResource GI.Window.Head.SubTitle.Style}"/>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="2" Width="31" Height="31" Style="{DynamicResource GI.Window.Head.Close.Style}" Click="Head_Close_Click" ></Button>
                    <Button Grid.Column="1" Width="31" Height="31" Style="{DynamicResource GI.Window.Head.Min.Style}" Click="Head_Min_Click"></Button>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Style="{DynamicResource GI.Window.Body.Style}">
            <Grid x:Name="home" Style="{DynamicResource GI.Body.Content.Style}"
                  Visibility="Visible">
                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <local:FunctionGroup Grid.Row="0" Grid.Column="0" Style="{DynamicResource GI.Body.FunctionGroup.Style}" MouseLeftButtonUp="Group1_Click"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="重力异常改正"
                                     SummaryText="自空改正、布格改正..."/>
                    <local:FunctionGroup Grid.Row="0" Grid.Column="1" Style="{DynamicResource GI.Body.FunctionGroup.Style}" MouseLeftButtonUp="Group2_Click"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="重力数据处理"
                                     SummaryText="扩边、滤波、导数..."/>
                    <local:FunctionGroup Grid.Row="0" Grid.Column="2" Style="{DynamicResource GI.Body.FunctionGroup.Style}" MouseLeftButtonUp="Group3_Click"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="重力正反演计算"
                                     SummaryText="界面重力正演、重力..."/>
                    <local:FunctionGroup Grid.Row="1" Grid.Column="0" Style="{DynamicResource GI.Body.FunctionGroup.Style}" MouseLeftButtonUp="Group4_Click"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="重力数据解释"
                                     SummaryText="二维建模、三维建模"/>
                    <local:FunctionGroup Grid.Row="1" Grid.Column="1" Style="{DynamicResource GI.Body.FunctionGroup.Style}" MouseLeftButtonUp="Group5_Click"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="地质体参数计算"
                                     SummaryText="地质体参数反演、地..."/>
                    <local:FunctionGroup Grid.Row="1" Grid.Column="2" Style="{DynamicResource GI.Body.FunctionGroup.Style}" MouseLeftButtonUp="Group6_Click"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="使用说明"
                                     SummaryText="第一次使用？点击这里！"/>
                </Grid>
            </Grid>
            <Grid x:Name="group1" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="重力异常改正" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                <Button Width="100" Height="40" Content="返回" Margin="10,10,570,366" Click="Group1_Back"></Button>
            </Grid>
            <Grid x:Name="group2" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="重力数据处理" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                <Button Width="100" Height="40" Content="返回" Margin="10,10,570,366" Click="Group2_Back"></Button>
            </Grid>
            <Grid x:Name="group3" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="重力正反演计算" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                <Button Width="100" Height="40" Content="返回" Margin="10,10,570,366" Click="Group3_Back"></Button>
            </Grid>
            <Grid x:Name="group4" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="重力数据解释" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                <Button Width="100" Height="40" Content="返回" Margin="10,10,570,366" Click="Group4_Back"></Button>
            </Grid>
            <Grid x:Name="group5" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="地质体参数计算" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                <Button Width="100" Height="40" Content="返回" Margin="10,10,570,366" Click="Group5_Back"></Button>
            </Grid>
            <Grid x:Name="group6" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="使用说明" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                <Button Width="100" Height="40" Content="返回" Margin="10,10,570,366" Click="Group6_Back"></Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
