<Window xmlns:UserControls="clr-namespace:GI.UserControls"  x:Class="GI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GI"
        Title="MainWindow" Width="690" Height="510" Style="{DynamicResource GI.Window.Style}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0" Style="{StaticResource GI.Window.Head.Style}"  MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Height="86">
                <Rectangle Margin="13" Style="{DynamicResource GI.Window.Head.Back.Style}" PreviewMouseLeftButtonUp="Group_Back" PreviewMouseLeftButtonDown="Preview_Group_Back" MouseLeave="Group_Back_MouseLeave" MouseEnter="Group_Back_MouseEnter"></Rectangle>
                <Rectangle x:Name="headLogo" Width="60" Margin="13" Style="{DynamicResource GI.Window.Head.Logo.Style}"></Rectangle>
            </Grid>

            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="headTitle" Grid.Row="0" Style="{DynamicResource GI.Window.Head.Title.Style}"/>
                <TextBlock x:Name="headSubTitle" Grid.Row="1" Style="{DynamicResource GI.Window.Head.SubTitle.Style}"/>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="2" Width="31" Height="31" Style="{DynamicResource GI.Window.Head.Close.Style}" Click="Head_Close_Click" ></Button>
                    <Button Grid.Column="1" Width="31" Height="31" Style="{DynamicResource GI.Window.Head.Min.Style}" Click="Head_Min_Click"></Button>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Style="{DynamicResource GI.Window.Body.Style}">
            <Grid x:Name="home" Style="{DynamicResource GI.Body.Content.Style}"
                  Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <UniformGrid Margin="30" Columns="3">
                    <local:FunctionGroup Grid.Row="0" Grid.Column="0" Style="{DynamicResource GI.Body.FunctionGroup.Style}" Click="Group1_Open"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="重力异常改正"
                                     SummaryText="自空改正、布格改正..."/>
                    <local:FunctionGroup Grid.Row="0" Grid.Column="1" Style="{DynamicResource GI.Body.FunctionGroup.Style}" Click="Group2_Open"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="重力数据处理"
                                     SummaryText="扩边、滤波、导数..."/>
                    <local:FunctionGroup Grid.Row="0" Grid.Column="2" Style="{DynamicResource GI.Body.FunctionGroup.Style}" Click="Group3_Open"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="重力正反演计算"
                                     SummaryText="界面重力正演、重力..."/>
                    <local:FunctionGroup Grid.Row="1" Grid.Column="0" Style="{DynamicResource GI.Body.FunctionGroup.Style}" Click="Group4_Open"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="重力数据解释"
                                     SummaryText="二维建模、三维建模"/>
                    <local:FunctionGroup Grid.Row="1" Grid.Column="1" Style="{DynamicResource GI.Body.FunctionGroup.Style}" Click="Group5_Open"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="地质体参数计算"
                                     SummaryText="地质体参数反演、地..."/>
                    <local:FunctionGroup Grid.Row="1" Grid.Column="2" Style="{DynamicResource GI.Body.FunctionGroup.Style}" Click="Group6_Open"
                                     Icon="{DynamicResource 占位}"
                                     TitleText="GRD画图"
                                     SummaryText="GRD文件可视化预览"/>
                </UniformGrid>
                <Rectangle Height="1" Fill="#dddddd" VerticalAlignment="Bottom" Margin="5,0"></Rectangle>
                <Grid Grid.Row="1" Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Style="{StaticResource GI.Body.BottomText.Style}">设置</TextBlock>
                    <TextBlock Grid.Column="2" Style="{StaticResource GI.Body.BottomText.Style}">关于</TextBlock>
                    <TextBlock Grid.Column="3" Style="{StaticResource GI.Body.BottomText.Style}">使用帮助</TextBlock>
                </Grid>
            </Grid>
            <Grid x:Name="group1" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="重力异常改正" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
            </Grid>
            <Grid x:Name="group2" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="重力数据处理" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
            </Grid>
            <Grid x:Name="group3" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="重力正反演计算" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
            </Grid>
            <Grid x:Name="group4" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="重力数据解释" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
            </Grid>
            <Grid x:Name="group5" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="地质体参数计算" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
            </Grid>
            <Grid x:Name="group6" Style="{DynamicResource GI.Body.Content.Style}">
                <TextBlock Text="使用说明" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
            </Grid>
        </Grid>
    </Grid>
</Window>
