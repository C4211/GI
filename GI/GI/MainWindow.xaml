<Window x:Class="GI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GI"
        Title="MainWindow" Width="690" Height="550" Style="{DynamicResource GI.Window.Style}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0" Style="{StaticResource GI.Window.Head.Style}"  MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0" Width="60" Height="60" Margin="12" Style="{DynamicResource GI.Window.Head.Logo.Style}"></Rectangle>
            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Style="{DynamicResource GI.Window.Head.Title.Style}"/>
                <TextBlock Grid.Row="1" Style="{DynamicResource GI.Window.Head.SubTitle.Style}" />
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="2" Width="31" Height="31" Style="{DynamicResource GI.Window.Head.Close.Style}" Click="Head_Close_Click" ></Button>
                    <Button Grid.Column="1" Width="31" Height="31" Style="{DynamicResource GI.Window.Head.Min.Style}" Click="Head_Min_Click"></Button>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Style="{DynamicResource GI.Window.Body.Style}">
            <Grid Width="500" Height="300">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <local:FunctionGroup 
                    Grid.Row="0" 
                    Grid.Column="0" 
                    Icon="{StaticResource GI.Window.Head.Logo}" 
                    TitleText="重力异常改正" 
                    TitleFontFamily="{StaticResource GI.Body.Title.FontFamily}"
                    TitleFontSize="14"
                    TitleForeground="#333333"
                    SummaryText="自空改正、布格改正..."
                    SummaryFontFamily="{StaticResource GI.Body.Summary.FontFamily}"
                    SummaryFontSize="11"
                    SummaryForeground="#999999"/>
                <local:FunctionGroup 
                    Grid.Row="0" 
                    Grid.Column="1" 
                    Icon="{StaticResource GI.Window.Head.Logo}"
                    TitleText="重力数据处理" 
                    SummaryText="扩边、滤波、导数..."/>
                <local:FunctionGroup
                    Grid.Row="0" 
                    Grid.Column="2" 
                    Icon="{StaticResource GI.Window.Head.Logo}" 
                    TitleText="重力正反演计算" 
                    SummaryText="界面重力正演、重力..."/>
                <local:FunctionGroup 
                    Grid.Row="1"
                    Grid.Column="0"
                    Icon="{StaticResource GI.Window.Head.Logo}"
                    TitleText="重力数据解释" 
                    SummaryText="二维建模、三维建模"/>
                <local:FunctionGroup
                    Grid.Row="1" 
                    Grid.Column="1" 
                    Icon="{StaticResource GI.Window.Head.Logo}"
                    TitleText="地质体参数计算" 
                    SummaryText="地质体参数反演、地..."/>
                <local:FunctionGroup 
                    Grid.Row="1" 
                    Grid.Column="2" 
                    Icon="{StaticResource GI.Window.Head.Logo}" 
                    TitleText="使用说明" 
                    SummaryText="第一次使用？点击这里！"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
