<Window x:Class="GI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Width="690" Height="550" Style="{DynamicResource GI.Window.Style}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0" Style="{StaticResource GI.Window.Head.Style}"  MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0" Width="60" Height="60" Margin="12" Style="{DynamicResource GI.Window.Head.Logo.Style}"></Rectangle>
            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Style="{DynamicResource GI.Window.Head.Title.Style}"/>
                <TextBlock Grid.Row="1" Style="{DynamicResource GI.Window.Head.SubTitle.Style}"/>
            </Grid>
            <Grid Grid.Column="2">
                
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Style="{DynamicResource GI.Window.Body.Style}"></Grid>
    </Grid>
</Window>
